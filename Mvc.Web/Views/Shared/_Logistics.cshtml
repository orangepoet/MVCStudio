@*全胜项目的布局*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/logistics")
    @RenderSection("css", required: false)
</head>
<body>
    <div id="wrapper">
        <header>
            <div>
                <h1>
                    全胜物流管理系统</h1>
            </div>
            <div>
                <p class="right">
                    @Html.Partial("_logo")
                </p>
            </div>
        </header>
        <article class="main">
            <aside class="cate">
                @{Html.RenderAction("Menu", "Home");}
            </aside>
            <section class="view">
                @RenderBody()
            </section>
            <div class="clear" />
        </article>
        <footer>
            <p>
                copy@@orangepoet</p>
        </footer>
        <input type="hidden" value="@Url.Content("~/Content/images/calendar.gif")" id="btnImg" />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/logistics")

    @RenderSection("script", required: false)
</body>
</html>
